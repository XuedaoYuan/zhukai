/* 大屏配置的自定义全局样式 */
.el-date-editor.hsa-el-date-picker {
    width: 100% !important;
    height: 100%;
    display: block;
    background-color: #ccc;

    .el-input__inner {
        height: 100%;
        background-color: #ccc;
    }
}

.vue-grid-item {
    // background-color: #ccc;
    position: relative;

    // background-image: url('../views/EditChartView/assets/bg-border.png');
    // background-size: 100% 100%;
    & > .vue-resizable-handle {
        z-index: 2;
    }

    .mask_container {
        position: absolute;
        left: 0;
        right: 0;
        top: 0;
        bottom: 0;
        background-color: transparent;
        z-index: 1;

        &.component-selected {
            border: 1px solid #fff;
        }

        &:hover {
            .delete-icon {
                display: block;
            }
        }

        .delete-icon {
            position: absolute;
            z-index: 2;
            width: 14px;
            height: 14px;
            background-color: red;
            top: -14px;
            right: 0;
            font-size: 14px;
            line-height: 1;
            text-align: center;
            color: #fff;
            cursor: pointer;
            display: none;
        }
    }
}

.mian-board__container div.vue-grid-layout {
    height: 100% !important;
}
