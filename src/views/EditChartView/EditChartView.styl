.TestVueGridLayout__container {
    height: 100%;
    display: flex;
    flex-direction: column;
}

.header__container {
    height: 44px;
    background: linear-gradient(180deg, #004574 0%, #002140 100%);
    border: 1px solid #295278;
    display: flex;
    align-items: center;
    justify-content: space-between;

    .left_container {
        display: flex;
        align-items: center;
        height: 100%;
    }

    .right_container {
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: flex-end;
        padding-right: 20px;

        .header-btn {
            font-size: 12px;
            font-family: PingFangSC-Regular, PingFang SC;
            font-weight: 400;
            color: #FFFFFF;
            line-height: 1;
            padding: 6px 20px;
            border-radius: 2px;
            margin-left: 10px;
            cursor: pointer;
            transition: background-color 0.5s ease;
        }

        .preview-btn {
            background-color: rgba(103, 194, 58, 1);

            &:active, &:focus {
                background-color: rgba(103, 194, 58, 0.9);
            }

            img {
                width: 16px;
                height: 12px;
                vertical-align: middle;
            }
        }

        .save-btn {
            background-color: #3875B9;

            &.save-btn-disabled {
                background-color: rgba(56, 117, 185, 0.7);
                cursor: not-allowed;
            }

            &:active, &:focus {
                background-color: rgba(56, 117, 185, 0.9);
            }
        }

        .check-btn {
            background-color: #E6A23C;

            &:active, &:focus {
                background-color: rgba(230, 162, 60, 0.9);
            }
        }
    }

    .back_icon {
        height: 100%;
        width: 80px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;

        span {
            transform: scaleY(2);
            display: block;
            font-size: 18px;
            line-height: 1;
            color: #61A7E9;
            margin-top: -4px;
        }
    }

    .label {
        font-size: 12px;
        font-weight: 400;
        color: #61A7E9;

        &.ml40 {
            margin-left: 40px;
        }
    }

    input {
        outline: none;
        border: 1px solid transparent;
        background-color: transparent;
        color: #fff;
        font-size: 14px;
        font-weight: 400;
        line-height: 2;
        padding-left: 10px;
        border-radius: 4px;

        &:focus, &:active {
            border-color: #fff;
        }
    }
}

.content {
    display: flex;
    flex: 1;
    overflow: hidden;

    /* > div {
       
    } */
    .main {
        flex: 1;
        overflow-y: auto;
        overflow-x: hidden;
        padding: 20px;
        background: #031B32;

        &::-webkit-scrollbar {
            display: none;
        }

        .mian-board__container {
            // height: 100%;
        }
    }

    .right {
        flex: 0 0 248px;
        background-color: #002140;
        border: 1px solid #295278;
        border-top: none;
        overflow: hidden;

        /deep/ .custom-tabs {
            >.el-tabs__header {
                border-bottom: 1px solid #295278;
                margin: 0;
            }

            .el-tabs__nav {
                width: 100%;
                border: none;
            }

            .el-tabs__item {
                width: 50%;
                padding: 0;
                text-align: center;
                border: none;
                color: #306B94;

                &.is-active {
                    color: #4EB3F9;
                }

                &:first-child::after {
                    display: block;
                    content: ' ';
                    width: 1px;
                    height: 14px;
                    background: #133759;
                    position: absolute;
                    right: 0;
                    top: 13px;
                }
            }
        }

        /deep/ .custom-collapse {
            border: none;

            .el-collapse-item__header {
                color: #fff;
                background-color: #133759;
                border-bottom: 1px solid #295278;
                padding: 0 10px;
                height: 36px;
                font-size: 13px;
                font-family: PingFangSC-Medium, PingFang SC;
                font-weight: 500;
                color: #FFFFFF;
                line-height: 13px;
            }

            .el-collapse-item__wrap {
                background: transparent;
                padding: 10px;

                .el-collapse-item__content {
                    padding: 0;
                }
            }
        }
    }
}

.bg-icon {
    display: inline-block;
    margin-left: 10px;
    width: 16px;
    height: 16px;
    cursor: pointer;

    &.red {
        background-color: red;
    }

    &.blue {
        background-color: blue;
    }

    &.lightgreen {
        background-color: lightgreen;
    }

    &.redToGreen {
        background-image: linear-gradient(to right, red, green);
    }
}

.xywh-config__container {
    display: flex;
    align-items: center;

    &.mt10 {
        margin-top: 10px;
    }

    .position-label {
        font-size: 14px;
        color: #9AB4CE;
    }

    .input_container {
        flex: 1;
        margin-left: 10px;
    }
}

.not-need-data-source {
    text-align: center;
    color: #de1212;
    margin-top: 20px;
}
